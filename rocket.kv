#:kivy 1.0.9

<Rocket>:

<Background>:
    canvas:
        Rectangle:
            source: 'background.png'
            pos:self.pos
            size:self.size


<RocketGame>:
    backgroundA: backgroundA
    backgroundB: backgroundB
    rocket: rocket

    Background:
        id: backgroundA
        x: 0
        y: 0
        width: root.width
        height: root.width

    Background:
        id: backgroundB
        x: 0
        y: self.height
        width: root.width
        height: root.width

    Rocket:
        id: rocket
        x: (root.width / 2) - (self.width / 2)
        y: self.y
